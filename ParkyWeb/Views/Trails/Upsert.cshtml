@model ParkyWeb.Models.ViewModel.TrailsVM

@{
    var title = "Create Trail";
}

<form method="POST" asp-action="Upsert">
    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @if (Model.Trail.Id != 0)
        {
            title = "Update Trail";
            <input type="hidden" asp-for="Trail.Id" />
        }

        <div class="col-12 m-2">
            <h2 class="text-primary">@title</h2>
        </div>
        <hr />
        <div class="col-12">
            <div class="row form-group m-2">
                <div class="col-4">
                    National Park
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m=>m.Trail.NationalParkId,Model.NationalParkList,"- Please select a park -",new {@class="form-control"})
                    <span asp-validation-for=Trail.NationalParkId class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <div class="col-4">
                    <label asp-for="Trail.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Name" class="form-control" />
                    <span asp-validation-for="Trail.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <div class="col-4">
                    <label asp-for="Trail.Difficulty"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Trail.Difficulty" asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row m-2">
                <div class="col-4">
                    <label asp-for="Trail.Distance"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Distance" class="form-control" />
                    <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <div class="col-4">
                    <label asp-for="Trail.Elevation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Elevation" class="form-control" />
                    <span asp-validation-for="Trail.Elevation" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row form-group m-2">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-success form-control">
                        <i class="far fa-save"></i>&nbsp;
                        @(Model.Trail.Id == 0? "Create" : "Update")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-info form-control"><i class="fas fa-long-arrow-alt-left"></i>&nbsp;Back to List</a>

                </div>
            </div>
        </div>
    </div>
</form>